      {
        "banner_label_padding": {
          "type": "panel",
          "size": [ "100%c + 12px", "100%" ],
          "controls": [
            {
              "banner_label": {
                "type": "label",
                "size": [ "default", 10 ],
                "offset": [ -1, -1 ],
                "text": "store.startMenu.sale",
                "color": "$new_offer_icon_text_color",
                "layer": 1
              }
            }
          ]
        }
      }
    ]
  }
}

